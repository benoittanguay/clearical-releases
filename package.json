{
  "name": "clearical",
  "private": true,
  "version": "1.6.3",
  "type": "module",
  "build": {
    "appId": "io.clearical.app",
    "productName": "Clearical",
    "protocols": [
      {
        "name": "Clearical",
        "schemes": [
          "clearical"
        ]
      }
    ],
    "directories": {
      "buildResources": "build"
    },
    "asar": {
      "smartUnpack": true
    },
    "asarUnpack": [
      "**/*.node",
      "**/better-sqlite3/**/*"
    ],
    "files": [
      "package.json",
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "!**/LICENSE*",
      "!**/LICENCE*",
      "!**/*.md",
      "!**/README*",
      "!**/CHANGELOG*",
      "!**/HISTORY*",
      "!**/*.map",
      "!**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**/test/**",
      "!**/node_modules/**/tests/**",
      "!**/node_modules/**/__tests__/**",
      "!**/node_modules/**/*.md",
      "!**/node_modules/**/docs/**",
      "!**/node_modules/**/.github/**",
      "!**/node_modules/**/example/**",
      "!**/node_modules/**/examples/**",
      "!**/node_modules/playwright/**",
      "!**/node_modules/playwright-core/**",
      "!**/node_modules/@playwright/**",
      "!tests/**/*",
      "!**/*.test.ts",
      "!**/*.test.js",
      "!**/*.spec.ts",
      "!**/*.spec.js",
      "!playwright.config.ts",
      "!playwright-report/**/*",
      "!test-results/**/*",
      "!.playwright-setup-summary.md",
      "!**/node_modules/electron/**",
      "!**/node_modules/typescript/**",
      "!**/node_modules/@swc/**",
      "!**/node_modules/app-builder-bin/**",
      "!**/node_modules/app-builder-lib/**",
      "!**/node_modules/7zip-bin/**",
      "!**/node_modules/eslint/**",
      "!**/node_modules/@typescript-eslint/**",
      "!**/node_modules/tailwindcss/**",
      "!**/node_modules/@esbuild/**",
      "!**/node_modules/caniuse-lite/**",
      "!**/node_modules/@types/**",
      "!**/node_modules/lodash/**",
      "!**/node_modules/wait-on/**",
      "!**/node_modules/concurrently/**"
    ],
    "extraResources": [
      {
        "from": "public/tray-icon.png",
        "to": "tray-icon.png"
      },
      {
        "from": "public/tray-icon@2x.png",
        "to": "tray-icon@2x.png"
      }
    ],
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "identity": "Benoit Tanguay (98UY743MSB)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "artifactName": "${productName}-${arch}.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": "arm64"
        },
        {
          "target": "zip",
          "arch": "arm64"
        }
      ],
      "notarize": false
    },
    "dmg": {
      "sign": true,
      "artifactName": "${productName}-${arch}.${ext}",
      "background": "build/dmg-background.png",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 200
        },
        {
          "x": 410,
          "y": 200,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Clearical"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Office"
    },
    "publish": {
      "provider": "github",
      "owner": "benoittanguay",
      "repo": "clearical-releases",
      "releaseType": "release"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:electron-main": "tsc -p electron/tsconfig.json && cp -r dist-electron/electron/* dist-electron/",
    "dev:electron": "npm run build:electron-main && concurrently \"vite\" \"tsc -p electron/tsconfig.json -w\" \"wait-on tcp:5173 && electron .\"",
    "build:electron": "cross-env BUILD_ENV=production tsc -b && vite build && npm run build:electron-main && electron-builder",
    "build:electron:dev": "cross-env BUILD_ENV=development tsc -b && vite build && npm run build:electron-main && electron-builder",
    "build:electron:prod": "cross-env BUILD_ENV=production tsc -b && vite build && npm run build:electron-main && electron-builder",
    "release": "./scripts/release.sh",
    "release:publish": "./scripts/release.sh --publish",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "npm run build:electron-main && playwright test",
    "test:headed": "npm run build:electron-main && playwright test --headed",
    "test:debug": "npm run build:electron-main && playwright test --debug",
    "test:report": "playwright show-report test-results/html"
  },
  "main": "dist-electron/main.js",
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "@types/plist": "^3.0.5",
    "better-sqlite3": "^12.6.0",
    "dotenv": "^17.2.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "plist": "^3.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.57.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^15.15.0",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "vite": "^6.4.1",
    "wait-on": "^8.0.5"
  }
}
