{
  "name": "clearical",
  "private": true,
  "version": "1.2.2",
  "type": "module",
  "build": {
    "appId": "io.clearical.app",
    "productName": "Clearical",
    "directories": {
      "buildResources": "build"
    },
    "asar": {
      "smartUnpack": true
    },
    "asarUnpack": [
      "package.json",
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "files": [
      "package.json",
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*",
      "!**/LICENSE*",
      "!**/LICENCE*",
      "!**/*.md",
      "!**/README*",
      "!**/CHANGELOG*",
      "!**/HISTORY*",
      "!**/*.map",
      "!**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**/test/**",
      "!**/node_modules/**/tests/**",
      "!**/node_modules/**/__tests__/**",
      "!**/node_modules/**/*.md",
      "!**/node_modules/**/docs/**",
      "!**/node_modules/**/.github/**",
      "!**/node_modules/**/example/**",
      "!**/node_modules/**/examples/**",
      "!**/node_modules/playwright/**",
      "!**/node_modules/playwright-core/**",
      "!**/node_modules/@playwright/**",
      "!tests/**/*",
      "!**/*.test.ts",
      "!**/*.test.js",
      "!**/*.spec.ts",
      "!**/*.spec.js",
      "!playwright.config.ts",
      "!playwright-report/**/*",
      "!test-results/**/*",
      "!.playwright-setup-summary.md"
    ],
    "extraResources": [
      {
        "from": "native/screenshot-analyzer/build/screenshot-analyzer",
        "to": "screenshot-analyzer",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public/tray-icon.png",
        "to": "tray-icon.png"
      },
      {
        "from": "public/tray-icon@2x.png",
        "to": "tray-icon@2x.png"
      },
      {
        "from": "python/dist/fastvlm-server",
        "to": "fastvlm-server",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "artifactName": "${productName}-${arch}.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": "arm64"
        },
        {
          "target": "zip",
          "arch": "arm64"
        }
      ]
    },
    "dmg": {
      "sign": false,
      "artifactName": "${productName}-${arch}.${ext}",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Clearical"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Office"
    },
    "publish": {
      "provider": "github",
      "owner": "benoittanguay",
      "repo": "clearical-releases",
      "releaseType": "release"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:electron-main": "tsc -p electron/tsconfig.json && cp dist-electron/electron/*.js dist-electron/electron/*.cjs dist-electron/ && cp -r dist-electron/electron/subscription dist-electron/ && cp -r dist-electron/electron/licensing dist-electron/ && cp -r dist-electron/electron/auth dist-electron/",
    "dev:electron": "npm run build:electron-main && concurrently \"vite\" \"tsc -p electron/tsconfig.json -w\" \"wait-on tcp:5173 && electron .\"",
    "build:electron": "cross-env BUILD_ENV=production tsc -b && vite build && npm run build:electron-main && electron-builder",
    "build:electron:dev": "cross-env BUILD_ENV=development tsc -b && vite build && npm run build:electron-main && electron-builder",
    "build:electron:prod": "cross-env BUILD_ENV=production tsc -b && vite build && npm run build:electron-main && electron-builder",
    "release": "./scripts/release.sh",
    "release:publish": "./scripts/release.sh --publish",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "npm run build:electron-main && playwright test",
    "test:headed": "npm run build:electron-main && playwright test --headed",
    "test:debug": "npm run build:electron-main && playwright test --debug",
    "test:report": "playwright show-report test-results/html"
  },
  "main": "dist-electron/main.js",
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "@types/plist": "^3.0.5",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^17.2.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "plist": "^3.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.57.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "playwright": "^1.57.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "wait-on": "^8.0.1"
  }
}
